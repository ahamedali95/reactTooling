{
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "NodeNext",
    }
  },
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react",
    "lib":  [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "allowJs": false,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop":true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "Api": [ "api" ],
      "Assets": [ "assets" ],
      "Components": [ "components" ],
      "Hooks": [ "hooks" ],
      "Pages": [ "pages" ],
      "Utils": [ "utils" ]
    },
    "types": [
      "node"
    ]
  }
}
